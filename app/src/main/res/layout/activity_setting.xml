<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TableLayout
            android:layout_width="313dp"
            android:layout_height="244dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp">

        <TableRow android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:gravity="center_vertical">
            <CheckBox
                    android:text="开启即连"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox"
                    android:layout_width="wrap_content"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="25dp"
                    android:layout_height="match_parent">
            </LinearLayout>
            <TextView
                    android:text="启动app时立刻尝试进行连接"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView"/>
        </TableRow>
        <TableRow android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:gravity="center_vertical">
            <CheckBox
                    android:text="自动寻址"
                    android:layout_height="wrap_content"
                    android:id="@+id/checkBox3"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="25dp"
                    android:layout_height="match_parent">
            </LinearLayout>
            <TextView
                    android:text="勾选自动导入电脑Ipv4地址"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"/>
        </TableRow>
        <TableRow android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:gravity="center_vertical">
            <TextView
                    android:text="电脑ipv4地址"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="25dp"
                    android:layout_height="match_parent">
            </LinearLayout>
            <EditText
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:gravity="center"
                    android:text="@string/ipv4"
                    android:textSize="15sp"
                    android:ems="10"
                    android:id="@+id/edittext_ipv4_num"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1">
            <TextView
                    android:text="使用端口"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="25dp"
                    android:layout_height="match_parent">
            </LinearLayout>
            <TextView
                    android:text="@string/port"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview_port_num"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1">
            <Switch
                    android:text="连接状态"
                    android:layout_height="wrap_content"
                    android:id="@+id/switch_connect"
                    tools:ignore="UseSwitchCompatOrMaterialXml"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="25dp"
                    android:layout_height="match_parent">
            </LinearLayout>
            <TextView
                    android:text="断开"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview_state1"/>
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1">
            <TextView
                    android:text="版本号"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview_version"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="25dp"
                    android:layout_height="match_parent">
            </LinearLayout>
            <TextView
                    android:text="玄鸟快传ver0.7"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview_version_num"/>
        </TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>